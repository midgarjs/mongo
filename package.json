{
  "name": "@midgar/mongo",
  "version": "1.0.0-alpha.1.3",
  "description": "A Midgar plugin to add Mongoose.",
  "main": "src/index.js",
  "module": "true",
  "scripts": {
    "postinstall": "midgar add @midgar/mongo",
    "preuninstall": "midgar rm @midgar/mongo",
    "build-docs": "jsdoc -c ./jsdoc.js ./README.md -t ./node_modules/ink-docstrap/template ./README.md -r ./src/",
    "test": "mocha --require esm tests/*.js --exit",
    "coverage": "nyc -i esm --reporter=lcov --reporter=text-summary npm run test",
    "eslint:ci": "eslint -f json -o reports/.eslint-report.json src/ || exit 0",
    "test:ci": "mocha --require esm tests/*.js --reporter mocha-sonarqube-reporter --reporter-options output=reports/xunit.xml --exit",
    "coverage:ci": "nyc -i esm --reporter=lcov npm run test:ci",
    "drone": "drone exec --exclude sonar"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/midgarjs/mongo.git"
  },
  "dependencies": {
    "@midgar/midgar": "^1.0.0-alpha.3.2",
    "@midgar/migrate": "^1.0.0-alpha.1.2",
    "@midgar/service": "^1.0.0-alpha.1.4",
    "@midgar/utils": "^1.0.0-alpha.1.5",
    "mongoose": "^5.8.5",
    "uid-safe": "^2.1.5"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "dirty-chai": "^2.0.1",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-standard": "^4.0.1",
    "esm": "^3.2.25",
    "ink-docstrap": "^1.3.2",
    "jest": "^24.9.0",
    "jsdoc": "^3.6.3",
    "mocha": "^7.0.0",
    "mocha-sonarqube-reporter": "^1.0.1",
    "nyc": "^15.0.0"
  },
  "keywords": ["midgar", "mvc", "mongo", "mongodb", "mongoose"],
  "author": "Metais Fabien",
  "license": "MIT"
}
